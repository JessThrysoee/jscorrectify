DATAROOTDIR=@datarootdir@

if test "$1" = "--help"
then
   echo "usage: cssbeautify [-o opt1=val1,opt2=val2...] [FILE]"
   exit
fi

java -cp ${DATAROOTDIR}/js.jar org.mozilla.javascript.tools.shell.Main -f ${DATAROOTDIR}/cssbeautify.js ${DATAROOTDIR}/cssbeautify-cl.js "$@"
